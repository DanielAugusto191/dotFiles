general {
        output_format = "i3bar"
        colors = true
        interval = 1
}
order += "disk /"
order += "memory"
order += "tztime local"

tztime local {
        format = "%m-%d-%Y %H:%M:%S"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "ArchLinux + I3WM - %free"
}

